<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include partials/head %>
  </head>
  <body class="container" ng-app="meanAdmin">

    <main ng-controller="registrationController">
			<div class="jumbotron">
				<h1>Site Initial Setup</h1>
			</div>
			
			<form name="regForm" class="form-horizontal col-sm-12" role="form" novalidate>
				<!-- userEmail -->
				<div class="form-group col-sm-10" ng-class="{ 'has-error' : regForm.userEmail.$invalid && !regForm.userEmail.$pristine }">
					<input name="userEmail" type="email" class="form-control" placeholder="User Email" ng-model="user.userEmail" required>
					<p ng-show="regForm.userEmail.$invalid && !regForm.userEmail.$pristine" class="help-block">Enter a valid email.</p>
				</div>
				<!-- userName -->
				<div class="form-group col-sm-10" ng-class="{ 'has-error' : regForm.userName.$invalid && !regForm.userName.$pristine }">
					<input name="userName" type="text" required class="form-control" placeholder="User Name" ng-model="user.userName" ng-minlength="3">
					<p ng-show="regForm.userName.$error.minlength" class="help-block">Username is too short.</p>
				</div>
				<!-- password -->
				<div class="form-group col-sm-10" ng-class="{ 'has-error' : regForm.userPassword.$invalid && !regForm.userPassword.$pristine }">
					<input name="userPassword" type="password" class="form-control" placeholder="Password" ng-model="user.userPassword" ng-minlength="8" required>
					<p ng-show="regForm.userPassword.$error.minlength" class="help-block">Password is too short.</p>
				</div>
				<div class="form-group col-sm-10">
					<input name="confirmPassword" type="password" class="form-control" placeholder="Confirm Password" compare-to="regForm.userPassword" ng-model="user.confirmPassword" required>
					<p ng-show="regForm.confirmPassword.$error" class="help-block">Password Donot Match.</p>
				</div>
				<div class="form-group col-sm-10">
					<input type="text" required class="form-control" placeholder="Display Name">
				</div>
				<div class="form-group col-sm-10">
					<input type="tel" class="form-control" placeholder="User Phone">
				</div>
				<div class="form-group col-sm-10">
					<button type="submit" class="btn btn-default">Submit</button>
				</div>
			</form>
			
    </main>

    <footer>
        <% include partials/footer %>
    </footer>
    <% include partials/foot %>
	</body>
</html>